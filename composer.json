{
    "name": "phore/di-base",
    "type": "library",
    "description": "Dependency Injection Base Classes and Interfaces",
    "keywords": ["Phore", "Dependency Injection", "Di"],
    "homepage": "https://getgismo.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Matthias Leuffen",
            "email": "matthes@leuffen.de"
        }
    ],
    "require": {
        "php": ">=7.0",
        "psr/container": "^1.0"
    },

    "require-dev": {
        "phpunit/phpunit": "^8.1"
    },
    "autoload": {
        "psr-4": {
            "Phore\\Di\\": "src/Di"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Phore\\Test\\Di\\": "test/Di"
        }
    },
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "0.1-dev"
        }
    }
}
